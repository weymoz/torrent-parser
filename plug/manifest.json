{
  "name": "Emp parser",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/cogwheel.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.empornium.me/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "declarativeContent", 
    "downloads",
    "http://*/"
  ]
}
